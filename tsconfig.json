{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "allowJs": true,
    "baseUrl": ".",
    "rootDirs": ["src"],
    "paths": {
      "@scripts/*": ["scripts/*"],
      "@artifacts/*": ["artifacts/*"],
      "@xtreamly/*": ["src/*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.js" // Add this line to include JavaScript files in the compilation
  ]
}