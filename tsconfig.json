{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "allowJs": true,
    "baseUrl": ".",
    "outDir": "./dist",
    "rootDirs": ["src"],
    "declaration": true,         // Generates .d.ts files for your code
    "declarationMap": true,      // Generates .d.ts.map files for debugging
    "emitDeclarationOnly": false, // Set true if you only want to emit declaration files
    "paths": {
      "@scripts/*": ["scripts/*"],
      "@artifacts/*": ["artifacts/*"],
      "@xtreamly/*": ["src/*"]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.js" // Add this line to include JavaScript files in the compilation
  ]
}